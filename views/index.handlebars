<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 justify-content-center">Ready to create and event!</h1>
            <p class="lead">Let's start to plan your party!</p>
        </div>
    </div>

    <br>

    <div class="card">
        <div class="card-body">
            <form>

                <div class="form-group">
                    <label for="name">Event Name</label>
                    <input type="text" class="form-control" id="enterName" name="name" placeholder="name">
                </div>

                <div class="form-group">
                    <label for="date">Enter Date</label>
                    <input type="text" class="form-control" id="enterDate" name="date" placeholder="date">
                </div>

                <div class="form-group">
                    <label for="time">Enter Time</label>
                    <input type="text" class="form-control" id="enterTime" name="time" placeholder="time">
                </div>

                <div class="form-group">
                    <label for="place">Enter Place</label>
                    <input type="text" class="form-control" id="enterPlace" name="place" placeholder="place">
                </div>

                <div class="form-group">
                    <label for="guestEmail">Guest List</label>
                    <input type="text" class="form-control" id="enterGuest" name="guestEmail" placeholder="enter email">
                </div>

                <button id="addBtn" type="button" class="btn btn-primary">Add Guest</button>

                <div class="card">
                    <div class="card-body">
                        <table id="guests" class="table">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Guest's e-mail</th>
                                </tr>
                            </thead>
                            <tbody id="guestTable">
                                {{#each guests}}
                                <tr>
                                    <td>
                                        {{this.email}}
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>

                <button id="submitBtn" type="submit" class="btn btn-primary">Submit</button>

            </form>
        </div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/js/index.js"></script>